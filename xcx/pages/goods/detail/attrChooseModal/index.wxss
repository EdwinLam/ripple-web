

/*对话框 */

.choose-attr-box {
  height: auto;
  width: 100%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}

.good-show {
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  position: relative;
}

.good-show-image-item {
  display: -webkit-flex;
  display: flex;
  -webkit-align-items: center;
  align-items: center;
  width: 190rpx;
  height: 190rpx;
  line-height: 60px;
  text-align: center;
  border-radius: 3px;
  border: 1rpx solid #b8b7bd;
  background-color: white;
  padding: 3px;
  margin-left: 10rpx;
  margin-top: -50rpx;
}

.good-show-info-item {
  font-size: 35rpx;
  padding-left: 20rpx;
  flex-flow: column nowrap;
  align-items: center;
}

.good-show-info-item .info-title {
  font-weight: bold;
  font-size: 35rpx;
  color: orangered;
}

.good-show-image {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.good-choose {
  padding-top: 20rpx;
  display: -webkit-flex;
  display: flex;
  align-items: stretch;
  -webkit-align-items: stretch;
  height: 650rpx;
  flex-flow: column nowrap;
}

.choose-good-num {
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  flex-flow: row nowrap;
}

.good-choose-item {
  margin-top: 30rpx;
  width: 100%;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  flex-flow: column nowrap;
  border-bottom: 1px #ebebeb solid;
  padding-bottom: 50rpx;
}

.choose-type-name {
  font-size: 35rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.choose-type-val {
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  flex-flow: row wrap;
}

.choose-type-val-item {
  text-align: center;
  margin: 5rpx 10rpx 5rpx;
  font-size: 30rpx;
  padding: 10rpx 30rpx 10rpx;
  background-color: #ebebeb;
  border-radius: 5px;
}

.choose-type-val-item.selected {
  color: white;
  background-color: #ff0036;
}

.good-op-btns {
  display: -webkit-flex;
  display: flex;
  align-items: flex-start;
  -webkit-align-items: flex-start;
  flex-flow: row nowrap;
}

.good-op-btns .weui-btn {
  width: 50%;
  margin: 0;
  border-radius: 0;
}

.choose-good-num {
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: -webkit-flex;
  display: flex;
  align-items: stretch;
  -webkit-align-items: stretch;
  flex-flow: row nowrap;
  border-bottom: 1px #ebebeb solid;
  padding-bottom: 50rpx;
  padding-top: 50rpx;
}

.good-num-title {
  font-size: 35rpx;
  font-weight: bold;
  color: #333;
  width: 50%;
}