.swiper-box {
    width: 100%;
    height: 320px;
}

.swiper-box .slide-image {
    width: 100%;
    height: 100%;
    display: inline-block;
    overflow: hidden;
}

.shopping-container {
    padding: 0 30rpx;
}

.shopping-container .name {
    margin: 10px 0;
    font-weight: bold;
    color: #333;
}

.shopping-container .price {
    margin: 10px 0;
    font-weight: normal;
    color: orangered;
}

.shopping-container .remark {
    margin: 10px 0;
    color: #939393;
    line-height: 22px;
}

.swiper-container {
    margin: 0 auto;
    position: relative;
    overflow: hidden;
}

.swiper-pager {
    position: absolute;
    right: 20px;
    bottom: 20px;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: rgba(0,0,0,.3);
    color: #fff;
    font-family: Arial, Helvetica, sans-serif;
    text-align: center;
    line-height: 40px;
    font-size: 12px;
}

/*使屏幕变暗  */
.commodity_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}
/*对话框 */
.commodity_attr_box {
  height: 300rpx;
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
  padding-top: 20rpx;
}