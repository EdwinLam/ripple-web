                                <image class="icon" src="../../assets/images/iconfont-plus-circle.png" />
                          </view>
                           <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                                                  <view class="weui-media-box__desc">

                                                  </view>

                            </view>
                      </navigator>
                  </block>
       </view>

</view>