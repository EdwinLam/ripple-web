<import src="../../components/searchBar/index.wxml"/>
<import src="../../components/swiper/index.wxml"/>
<template is="searchBar" data="{{...searchBar}}"/>
<template is="swiper" data="{{...swiper}}"/>

<view class="weui-grids">
            <block wx:for="{{classifyItems}}" wx:key="*this">
                <navigator url="" class="weui-grid" hover-class="weui-grid_active">
                    <image class="weui-grid__icon" src="../../assets/images/icon_tabbar.png" />
                    <view class="weui-grid__label">{{item.classifyName}}</view>
                </navigator>
            </block>
 </view>

<view wx:for="{{classifyItems}}"  wx:key="*this">
      <image class="classify-banner"  src="{{ item.thumbUrl }}" />
      <view class="weui-grids">
                  <block wx:for="{{ item.goods }}" wx:key=""  wx:for-item="good" >
                      <navigator url="" class="good-item" hover-class="weui-grid_active">
                          <image class='item-image' src="{{ good.thumbUrl }}" />
                          <text>{{ good.goodName }}</text>
                          <view>
