.ripple-search-bar{
    position:relative;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    box-sizing:border-box;
    background-color:#EFEFF4;
}

.ripple-search-bar__from{
   position:relative;
   -webkit-box-flex:1;
   -webkit-flex:auto;
   flex:auto;
   background:#FFFFFF;
   border-top:1rpx solid #E6E6EA;
   border-bottom:1rpx solid #E6E6EA;
}

.ripple-search-bar__box{
    position:relative;
    padding-left:30px;
    padding-right:30px;
    width:100%;
    box-sizing:border-box;
    z-index:1;
}

.ripple-search-bar__input{
    height:28px;
    line-height:28px;
    font-size:14px;
}

.ripple-icon-clear{
    position:absolute;
    top:0;
    right:0;
    padding:7px 8px;
    font-size:0;
}


.ripple-icon-search__in-box{
    position:absolute;
    left:10px;
    top:7px;
}

.scroll-list {
    overflow: hidden;
}

.weui-icon-search, 
.weui-search-bar__text {
    vertical-align: inherit;
}

.topbar {
    background: #fff;
}

.topbar-item {
    color: #333;
    text-align: center;
    padding: 10px 0;
}

.topbar-item.active {
    color: #479de6;
}

.swiper_box {
    width: 100%;
}

swiper-item image {
    width: 100%;
    display: inline-block;
    overflow: hidden;
}

.classify-banner{
    height:300rpx
}

.good-item {
    position:relative;
    float:left;
    width:50%;
    box-sizing:border-box;
    border-right:1rpx solid #D9D9D9;
    border-bottom:1rpx solid #D9D9D9;
    height:550rpx
}

.good-item .item-image{
    width:100%;
    height:400rpx;
}
.good-item .icon{
    position:absolute;
    width:50rpx;
    height:50rpx;
    right:20rpx;
    bottom:20rpx;
}