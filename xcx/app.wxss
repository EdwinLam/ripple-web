 * 如果需要增加额外的WXSS样式表, 直接import即可, 但需注意引用顺序
 */



@import 'assets/styles/weui.wxss';
@import 'assets/styles/prompt.wxss';
@import 'assets/styles/skyvow.wxss';

/*使屏幕变黑*/
.night-fall{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.quantity-wrapper {
    position: absolute;
    top: 0;
    right: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
}

.quantity-wrapper .customize-qua {
	width: 84px;
    height: 24px;
    box-sizing: border-box;
}

.quantity-decrease,
.quantity-increase,
.quantity {
	display: inline-block;
    position: relative;
    width: 25px;
    height: 100%;
    border: 1px solid transparent;
	border-radius: 4px;
	border-color: #ccc;
	box-sizing: border-box;
}

.quantity {
	-webkit-appearance: none;
    text-align: center;
    width: 34px;
    vertical-align: top;
    font-size: 14px;
    line-height: 24px;
    color: #232326;
    min-height: 0;
}

.quantity-decrease {
    border-top-right-radius: 0;
    border-bottom-right-radius: 0;
    margin-left: 0;
}

.quantity-decrease:before,
.quantity-increase:before {
	content: "";
	position: absolute;
	top: 11px;
	left: 6px;
	width: 12px;
	height: 1px;
	background-color: #ccc;
}

.quantity-increase {
    border-top-left-radius: 0;
    border-bottom-left-radius: 0;
    margin-left: -1px;
}

.quantity-increase:after {
	content: "";
	position: absolute;
	top: 6px;
	left: 11px;
	width: 1px;
	height: 12px;
	background-color: #ccc;
}

.quantity {
	border-radius: 0;
	margin-left: -1px;
}